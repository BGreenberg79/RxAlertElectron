{
  "name": "rxalertelectron",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "pack": "npm run build:renderer && npm run build:electron && electron-builder --dir",
    "dist": "npm run build:renderer && npm run build:electron && electron-builder",
    "dev": "concurrently \"vite\" \"npm run watch:main\" \"npm run start:electron\"",
    "watch:main": "tsc -p tsconfig.electron.json -w",
    "start:electron": "wait-on http://localhost:5173 && node delay-start.js",
    "build": "vite build && tsc -p tsconfig.electron.json",
    "start": "electron dist/electron/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "build": {
    "appId": "com.yourcompany.rxalert",
    "productName": "RxAlert",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/pill_favicon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.8.0",
    "@electron/remote": "^2.1.3",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "eslint": "^9.38.0",
    "express": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.49",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "wait-on": "^9.0.1"
  }
}
